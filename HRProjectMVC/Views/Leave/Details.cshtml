                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.NumberOfDays)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.CreateDate)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.CreateDate)
                    </dd>
                    <dt class="col-sm-2">
