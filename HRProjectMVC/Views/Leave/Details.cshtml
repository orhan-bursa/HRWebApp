                    </dt>
                    <dd class="col-sm-10" hidden>
                        @Html.DisplayFor(model => model.IsApproved)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.LeaveType)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.LeaveType)
                    </dd>
